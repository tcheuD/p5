{% extends "layout.html.twig" %}
    {% block body %}
        <section>
        <header class="major">
            <h2>Blog</h2>
        </header>
            {% if session.get('id') %}
                <a href="/blog/addPost" class="button alt">Ajouter un article</a>
            {% endif %}
        <div class="row">
        {% for post in posts %}
                    <div class="col-6 col-12-small">
                        <section class="box">
                            <header>
                                <h3>{{ post.title }}</h3>
                                <p>le {{ post.creationDate|date("d/m/Y à H\\hi") }}</p>
                            </header>
                            <p>{{ post.content|slice(1, 50) }}</p>
                            {% if post.modificationDate is not empty %}
                                <em>Dernière modification le : {{ post.modificationDate|date("d/m/Y à H\\hi") }}</em>
                            {% endif %}
                            <footer>
                                <ul class="actions">
                                    <li><a href="/blog/post/{{ post.id }}" class="button icon fa-file-text">Lire la suite</a></li>
                                </ul>
                            </footer>
                        </section>
                    </div>
        {% endfor %}
        </div>
        </section>
    {% endblock %}